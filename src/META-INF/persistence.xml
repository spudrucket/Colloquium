<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ColloquiumPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>spudrucket.github.io.Colloquium.Paragraphs</class>
    <class>spudrucket.github.io.Colloquium.Terms</class>
    <class>spudrucket.github.io.Colloquium.Informants</class>
    <class>spudrucket.github.io.Colloquium.Tags</class>
    <class>spudrucket.github.io.Colloquium.Usages</class>
    <class>spudrucket.github.io.Colloquium.Interviews</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby:colloquiumdb;create=true"/>
      <property name="javax.persistence.jdbc.user" value="app"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="javax.persistence.jdbc.password" value="app"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
